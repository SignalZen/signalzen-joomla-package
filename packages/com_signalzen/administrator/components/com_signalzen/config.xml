<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset
		name="General"
		label="General"
		description="General configuration of SignalZen module"
		>
		<field
			name="signalzen_token"
			type="text"
			size="8"
			label="Public Token"
			extension="com_signalzen"
			view="signalzen_token"
		/>
	</fieldset>
	<fieldset
		name="Widget Positioning"
		label="Widget Positioning"
		description="Positioning of the Live Chat widget configuration"
		>
		<field
			name="horizontal_position"
			type="list"
			label="Horizontal Position"
			extension="com_signalzen"
			view="horizontal_position"
		>
			<option value="">Default</option>
			<option value="left">Left</option>
			<option value="right">Right</option>
		</field>
		<field
			name="vertical_position"
			type="list"
			label="Vertical Position"
			extension="com_signalzen"
			view="vertical_position"
		>
			<option value="">Default</option>
			<option value="top">Top</option>
			<option value="bottom">Bottom</option>
		</field>
		<field
			name="horizontal_offset"
			type="number"
			size="8"
			label="Horizontal Offset (in pixels, can be negative)"
			extension="com_signalzen"
			view="horizontal_offset"
		/>
		<field
			name="vertical_offset"
			type="number"
			size="8"
			label="Vertical Offset (in pixels, can be negative)"
			extension="com_signalzen"
			view="vertical_offset"
		/>
	</fieldset>
	<fieldset
		name="Widget Colors"
		label="Widget Colors"
		description="Color palette of the Live Chat widget configuration"
		>
		<field
			name="color_primary"
			type="color"
			size="8"
			label="Primary color"
			extension="com_signalzen"
			view="color_primary"
		/>
		<field
			name="color_secondary"
			type="color"
			size="8"
			label="Secondary color"
			extension="com_signalzen"
			view="color_secondary"
		/>
		<field
			name="color_footer"
			type="color"
			size="8"
			label="Footer color"
			extension="com_signalzen"
			view="color_footer"
		/>
		<field
			name="color_error"
			type="color"
			size="8"
			label="Error color"
			extension="com_signalzen"
			view="color_error"
		/>
		<field
			name="color_popup"
			type="color"
			size="8"
			label="Popup color"
			extension="com_signalzen"
			view="color_popup"
		/>
		<field
			name="color_popupClose"
			type="color"
			size="8"
			label="Popup close color"
			extension="com_signalzen"
			view="color_popupClose"
		/>
		<field
			name="color_popupCloseSymbol"
			type="color"
			size="8"
			label="Popup close symbol color"
			extension="com_signalzen"
			view="color_popupCloseSymbol"
		/>
		<field
			name="color_popupFormInputBorder"
			type="color"
			size="8"
			label="Popup form input color"
			extension="com_signalzen"
			view="color_popupFormInputBorder"
		/>
		<field
			name="color_badge"
			type="color"
			size="8"
